    ajax.onreadystatechange = function() {
        if (this.readyState == 4 && this.status == 200) {
            var data = JSON.parse(this.responseText);
            console.log(data);

            var html = "";
            for(var a = 0; a < data.length; a++) {
                var Date = data[a].date;
                var Fajr = data[a].Fajr;
                var Sunrise = data[a].Sunrise;
                var Zuhr = data[a].Zuhr;
                var Sunset = data[a].Sunset;
                var Maghrib = data[a].Maghrib;
                html += "<tr>";
html += "<td>" + Maghrib + "</td>"; 
html += "<td>" + Sunset + "</td>";  
html += "<td>" + Zuhr + "</td>";   
html += "<td>" + Sunrise + "</td>";              
html += "<td>" + Fajr + "</td>";
                html += "</tr>";
            }
            document.getElementById("data").innerHTML += html;
        }
